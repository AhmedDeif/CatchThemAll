package src;

import java.util.Collections;
import java.util.Arrays;
import java.util.concurrent.ThreadLocalRandom;

public class Maze {

	/*
	 * The end point will always be set to be the bottom right corner of the maze.
	 * The coordinates of this point will always be maze[n-1][m-1] where n and m
	 * define the size of the maze in the x and y directions respectively.
	 */
	
	Cell[][] maze;
	int x;
	int y;
	int startPointX;
	int startPointY;
	
	public Maze(int x, int y) {
		maze = new Cell[x][y];
		this.x = x;
		this.y = y;
	}
	
	public void GenerateStartPoint() {
		
	}
	
	public void MazeGen() {
		int startX = ThreadLocalRandom.current().nextInt(0, x + 1);
		int startY = ThreadLocalRandom.current().nextInt(0, y + 1);
	}
	
	public boolean CanVisit(Cell a) {
		
		//	Up
		// Left
		// Right
		// down
		return false;
	}
	
	
}
